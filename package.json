    "connect-redis": "^5.0.0",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.0",
    "https": "^1.0.0",
    "joi": "^17.2.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "momentjs": "^2.0.0",
    "node-cron": "^2.0.3",
    "redis": "^3.0.2",
    "url": "^0.11.0",
    "uuidv4": "^6.2.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/agenda": "^2.0.9",
    "@types/app-root-path": "^1.2.4",
    "@types/axios": "^0.14.0",
    "@types/bcrypt-nodejs": "0.0.31",
